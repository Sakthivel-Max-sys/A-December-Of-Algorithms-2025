N = int(input())

# Determine the width based on the binary length of N
width = len(bin(N)) - 2

for i in range(1, N + 1):
    decimal_value = str(i)
    octal_value = oct(i)[2:]
    hexadecimal_value = hex(i)[2:].upper()
    binary_value = bin(i)[2:]
    
    print(decimal_value.rjust(width), 
          octal_value.rjust(width), 
          hexadecimal_value.rjust(width), 
          binary_value.rjust(width))


